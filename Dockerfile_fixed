FROM python:3.9-slim

# Set working directory
WORKDIR /app

# Install system dependencies (including curl for health check)
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better Docker layer caching
COPY requirements_irt.txt .
RUN pip install --no-cache-dir -r requirements_irt.txt

# Copy application files
COPY simple_backend.py .
COPY irt_personality_test.py .
COPY data_persistence.py .

# Create necessary directories
RUN mkdir -p /app/data

# Set environment variables
ENV PORT=7860
ENV PYTHONPATH=/app
ENV STORAGE_TYPE=file
ENV HF_SPACE=true

# Expose the port
EXPOSE 7860

# Run the application
CMD ["python", "-c", "import uvicorn; from simple_backend import app; uvicorn.run(app, host='0.0.0.0', port=7860)"]
